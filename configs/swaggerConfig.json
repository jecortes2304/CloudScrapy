    "/api/engine/execute": {
      "post": {
        "tags": [
          "Engine"
        ],
        "description": "Execute a set of instructions in a new browserContext of the user",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Full execution request parameters",
            "schema": {
              "$ref": "#/definitions/Execution"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
